<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:Waf.MusicManager.Presentation.Controls">

    <Style TargetType="ctrl:SuperToolTip">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctrl:SuperToolTip">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Content="{TemplateBinding Title}" Grid.Row="0" FontWeight="SemiBold"/>
                        <Label Content="{TemplateBinding Description}" Grid.Row="1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>